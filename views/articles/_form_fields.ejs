<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" required value="<%= article.title %>">
    <label for="description" class="mt-4">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
    <label for="markdown" class="mt-4">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
    <button type="submit" class="mt-4 btn btn-primary">Save</button>
    <a href="/" class="mt-4 btn btn-secondary">Cancel</a>
</div>