<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .clickableArticle {
            text-decoration: none;
        }

        .hidden {
            display: none;
        }

        #editToggle{
            position: absolute;
            background-color: white;
            border: none;
            outline: none;
            right: 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <button id="editToggle"><i class="bi bi-pencil-square"></i></button>
        <h1 class="mb-4 mt-2">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article=> { %>
                <article class="card mt-4">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%= article.title %>
                        </h2>
                        <p class="card-subtitle text-muted mb-2">
                            <%= article.createdAt.toLocaleDateString() %>
                        </p>
                        <p class="card-text mb-2">
                            <%= article.description %>
                        </p>
                        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <div class="buttonRow hidden mt-2">
                            <form action="/articles/<%= article.id %>?_method=DELETE" method="post">
                                <button type="submit" class="btn btn-danger deleteButton">Delete</button>
                            </form>
                            <a href="/articles/edit/<%= article.id %>" class="mt-2 btn btn-info">Edit</a>
                        </div>
                    </div>
                </article>
            <% }) %>
    </div>
    <script src="/js/hideAndShow.js"></script>
</body>

</html>